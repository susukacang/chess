* {
  box-sizing: border-box;
}

.coordinates {
  position: absolute;
  top: 0px;
  left: 0px;
  z-index: -1;
  display: none;
}
#layout {
  width: 822px;
}

#ylabels {
  width: 20px;
  display: inline-block;
  /* background: greenyellow; */
  /* border: 1px solid red; */
  /* z-index:100; */
  height: 800px;
  float: left;
}

.ylabel {
  width: 100%;
  height: 12.5%;
  /* border: 1px solid blue; */
  font-size: 10px;
}

#xlabels{
  width: 802px;
  display: inline-block;
  /* background: greenyellow; */
  /* border: 1px solid red; */
  z-index:100;
  height: 20px;
  float: right;
}

.xlabel {
  display: inline-block;
  width: 12.5%;
  /* height: 10px; */
  /* border: 1px solid blue; */
  font-size: 10px;
}

#board {
  float:left;
  display: inline-block;
  border: 1px solid blue;
  width: 802px;
  /* width: 100%; */
  /* min-height: 500px; */
  /* position: absolute; */
  /* top: 20px; */
  /* left: 20px; */
  opacity: 1;
  position: relative;
}

#pieces {
  border: 1px solid blue;
  width: 802px;
  min-height: 802px;
  display: none;
}

.box, #boxv, .piece, .whpiece, .bkpiece {
  font-size: 100px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  /* margin-bottom: -4px; */
  /* font-size:  */
  float: left;
  pointer-events: auto;
  width: 100px;
  height: 100px;
  border: 1px solid red;
}

.box {
  position: relative;
  z-index: -1;
}

#currentSquare, #nextSquare {
  width: 100px;
  height: 100px;
  border: 4px dashed violet;
  /* background-color:#f6f668; #bbca2b */
  pointer-events: none;
  /* display: none; */
  position: absolute;
  left: 0px;
  top: 0px;
  cursor: grabbing;
  z-index: 0;
}

.whcurrent {
    background-color:#f6f668;
}

.bkcurrent {
    background-color: #bbca2b;
}

.piece, .whpiece, .bkpiece {
  /* border: 10px double rgb(53, 9, 53); */
  position: absolute;
  top: 0px;
  left: 0px;
  z-index: 1;
}

.box.occupied:hover {
  cursor: grab;
}

.box.occupied:active {
  cursor: grabbing;
}

#boxv:active, #boxv:hover, #boxv:focus {
  pointer-events: all;
  cursor: grabbing;
}

.whitebox {
  background: #eeeed2;
}

.blackbox {
  background: #769656;
}

#boxv {
  width: 100px;
  height: 100px;
  border: 4px dashed violet;
  pointer-events: none;
  /* display: none; */
  position: absolute;
  left: 900px;
   cursor: grabbing;
}

.movepiece {
  transform: translate(calc(var(--dx) *  1px), calc(var(--dy) * 1px));
  transition: transform calc(var(--dt) * 1s);
  /* transition: transform (calc(var(--dt))); */
  /* transition: transform var(calc(--dt)*3); */
}

.noselect {
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -khtml-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
}

.piece, .whpiece, .bkpiece {
  cursor: grab;
  transition: transform calc(0.2 * 1s);

  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}

.dragging {
    transition: transform calc(0.0 * 1s);
    z-index: 1000;
}